#include<stdio.h>
#include<unistd.h>
#include<pthread.h>
#include<sys/wait.h>
#include<stdlib.h>

void *findAvg(void *arr){
  int *a = (int *)arr;
  float sum = 0;
  int i;
  for( i = 0; i < n; i++){
    sum += *(a+i);
  }
  return (sum/n);
}

void *findMin(void *arr){
  int *a = (int *)arr;
  int min = *a;
  int i;
  for( i = 1; i < n; i++){
    if(*(a+i) < min)
      min  = *(a+i);
  }
  return min;
}

void *findMax(void *arr){
  int *a = (int *)arr;
    int max = *a;
    int i;
    for( i = 1; i < n; i++){
      if(*(a+i) > max)
        max  = *(a+i);
    }
    return max;
}

int main(){
  pthread_t th1,th2,th3;
  int n;
  cout<<"Enter number of elements : ";
  scanf("%d",&n);
  
  int arr[n];
  for(int i = 0; i < n; i++)
      scanf("%d",&arr[i]);
      
      
  float avgVal;
  int minVal,maxVal;

  pthread_create(&th1,NULL,findAvg,arr);
  pthread_create(&th2,NULL,findMin,arr);
  pthread_create(&th3,NULL,findMax,arr);
  
  pthread_join(th1,NULL);
  pthread_join(th2,NULL);
  pthread_join(th3,NULL);
  exit(0);
}
